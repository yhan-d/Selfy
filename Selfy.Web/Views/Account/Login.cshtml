@using Selfy.Web.ViewModels
@model LoginViewModel
<!DOCTYPE html>
<html lang="tr" dir="ltr">
<head>

</head>

<body>

    <!-- Breadcrumb Start -->
    <div class="breadcrumb-wrap">
        <div class="container">
            <ul class="breadcrumb">
                <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Ana Sayfa</a></li>
                <li class="breadcrumb-item"><a href="#">Kullanıcı</a></li>
                <li class="breadcrumb-item active">Giriş Yap</li>
            </ul>
        </div>
    </div>
    <!-- Breadcrumb End -->
    <!-- Login Start -->
    <div class="login">
        <div class="container">
            <div class="section-header">
                <h3>Giriş Yap</h3>
            </div>
            <div class="row">
                <div class="col">
                    <form asp-controller="Account" asp-action="Login">
                        <div asp-validation-summary="All"></div>
                        <div class="login-form">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>E-mail / Kullanıcı Adı</label>
                                    <input class="form-control" asp-for="UserName" placeholder="Kullanıcı Adı">
                                    <span class="text text-danger" asp-validation-for="UserName"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Şifre</label>
                                    <input class="form-control" asp-for="Password" placeholder="Şifre">
                                    <span class="text text-danger" asp-validation-for="Password"></span>
                                </div>
                                <div class="col-md-12">
                                    <div class="custom-control custom-checkbox">
                                        <label class="custom-control custom-checkbox">
                                            <input asp-for="RememberMe" class="custom-control-input">
                                            <span class="custom-control-label">Beni Hatırla</span>
                                            <span class="text text-danger" asp-validation-for="RememberMe"></span>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <button type="submit" asp-controller="Account" asp-action="Login" class="btn">Giriş</button>
                                </div>
                            </div>
                        </div>


                    </form>

                </div>
            </div>
        </div>
    </div>

</body>
</html>

